<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.products.ProductList">

    <RelativeLayout
        android:id="@+id/rlProductRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/tvProductNameProductLists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="New Text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toRightOf="@+id/rlImageAndProgress"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvProductListPriceProductList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProductNameProductLists"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@+id/tvProductNameProductLists" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rlImageAndProgress"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivProductSmallListImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                />

            <!--<ProgressBar-->
                <!--style="?android:attr/progressBarStyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/pbProductImage"-->
                <!--android:layout_centerInParent="true"/>-->
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
