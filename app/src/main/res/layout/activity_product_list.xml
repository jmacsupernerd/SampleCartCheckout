<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProductList">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvProducts" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivCart"
        android:src="@mipmap/cart_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <at.markushi.ui.CircleButton
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@mipmap/cart_icon"
        android:id="@+id/circle_cart_icon"
        app:cb_color="#DC291E"
        app:cb_pressedRingWidth="8dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvCount"
        android:layout_alignTop="@+id/circle_cart_icon"
        android:layout_alignLeft="@+id/circle_cart_icon"
        android:layout_alignBottom="@+id/circle_cart_icon"
        android:layout_alignRight="@+id/circle_cart_icon"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginRight="20dp" />
</RelativeLayout>
